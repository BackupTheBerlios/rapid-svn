<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.syracus.rapid.messages.Message"
        table="messages"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Message.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="status"
            type="java.lang.String"
            update="true"
            insert="true"
            column="status"
        />

        <property
            name="body"
            type="text"
            update="true"
            insert="true"
            column="body"
        />

        <many-to-one
            name="receiver"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="receiver"
        />

        <property
            name="send"
            type="java.util.Date"
            update="true"
            insert="true"
            column="send"
        />

        <many-to-one
            name="sender"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="sender"
        />

        <property
            name="subject"
            type="java.lang.String"
            update="true"
            insert="true"
            column="subject"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Message.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
