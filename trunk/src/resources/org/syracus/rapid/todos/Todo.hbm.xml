<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.syracus.rapid.todos.Todo"
        table="todos"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Todo.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="done"
            type="boolean"
            update="true"
            insert="true"
            column="done"
        />

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="created"
        />

        <property
            name="description"
            type="text"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="modified"
            type="java.util.Date"
            update="true"
            insert="true"
            column="modified"
        />

        <many-to-one
            name="owner"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="owner"
        />

        <property
            name="summary"
            type="java.lang.String"
            update="true"
            insert="true"
            column="summary"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Todo.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
