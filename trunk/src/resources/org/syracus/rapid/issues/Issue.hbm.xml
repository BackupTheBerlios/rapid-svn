<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.syracus.rapid.issues.Issue"
        table="issues"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Issue.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="component"
            class="org.syracus.rapid.components.Component"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="component"
        />

        <many-to-one
            name="module"
            class="org.syracus.rapid.components.Module"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="module"
        />

        <many-to-one
            name="project"
            class="org.syracus.rapid.components.Project"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="project"
        />

        <property
            name="assigned"
            type="java.util.Date"
            update="true"
            insert="true"
            column="assigned"
        />

        <many-to-one
            name="assignee"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="assignee"
        />

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="created"
        />

        <many-to-one
            name="creator"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="creator"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="modified"
            type="java.util.Date"
            update="true"
            insert="true"
            column="modified"
        />

        <many-to-one
            name="modifier"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="modifier"
        />

        <property
            name="priority"
            type="java.lang.String"
            update="true"
            insert="true"
            column="priority"
        />

        <property
            name="reported"
            type="java.util.Date"
            update="true"
            insert="true"
            column="reported"
        />

        <many-to-one
            name="reporter"
            class="org.syracus.rapid.realm.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="reporter"
        />

        <property
            name="status"
            type="java.lang.String"
            update="true"
            insert="true"
            column="status"
        />

        <property
            name="summary"
            type="java.lang.String"
            update="true"
            insert="true"
            column="summary"
        />

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            column="type"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Issue.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
